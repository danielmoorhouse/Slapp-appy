@model SlappMain.Models.AppCat

@{
    ViewBag.Title = "Create";
}

<h2>Create Application - Category Link</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="margin-left: 20%; margin-top: 5%; height: 20em;">


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <h4 class="indhead">
                <label class="control-label col-md-2" for="AppId">App Selection</label></h4>
                <div class="col-md-10">
                    @Html.DropDownList("AppId")
                    @Html.ValidationMessageFor(model => model.AppId, "", new { @class = "text-danger" })
                </div>
</div>

        <div class="form-group">
            <h4 class="indhead">
                <label class="control-label col-md-2" for="CategoryId">Category Selection</label></h4>
                <div class="col-md-10">
                    @Html.DropDownList("CatId")
                    @Html.ValidationMessageFor(model => model.CatsId, "", new { @class = "text-danger" })
                </div>
</div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default revs" />
            </div>
        </div>
    </div>
}
<hr/>
<div>
    <button class="btn btn-default revs"> @Html.ActionLink("Back to List", "Index")</button>
</div>
<hr/>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
