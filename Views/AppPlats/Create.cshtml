@model SlappMain.Models.AppPlats

@{
    ViewBag.Title = "Create";
}

<h2>Create Application - Platform Record</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal" style="margin-left: 20%; height: 20em; margin-top: 5%;">
    
    
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2 indhead" for="AppId">App Selection</label>
        <div class="col-md-10">
          <h4 class="indhead">  @Html.DropDownList("AppId") </h4>
            @Html.ValidationMessageFor(model => model.AppId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2 indhead" for="PegiId">Platform Selection</label>
        <div class="col-md-10">
           <h4 class="indhead"> @Html.DropDownList("PlatId")</h4>
            @Html.ValidationMessageFor(model => model.PlatId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default revs" />
        </div>
    </div>
    </div>
    }
<hr/>
<div>
    <button class="btn btn-default revs">   @Html.ActionLink("Back to List", "Index")</button>
</div>
<hr/>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
