@model SlappMain.Models.Companies

@{
    ViewBag.Title = "Create";
}

<h2>Create Company Record</h2>
<hr />



    @using (Html.BeginForm("Create", "Companies", null, FormMethod.Post,
new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal" style="margin-left: 20%; height:20em; margin-top: 5%;">


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">

        <h4 class="indhead"> @Html.LabelFor(model => model.CompName, htmlAttributes: new { @class = "control-label col-md-2" })</h4>
        <div class="col-md-10">
            @Html.EditorFor(model => model.CompName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CompName, "", new { @class = "text-danger" })
            </div>
        </div>
    <div class="form-group">

        <h4 class="indhead">
            @Html.LabelFor(model => model.CompCont, htmlAttributes: new { @class = "control-label col-md-2" })
        </h4>

        <div class="col-md-10">
            @Html.EditorFor(model => model.CompCont, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CompCont, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <h4 class="indhead" >

                @Html.Label("Company Logo", new { @class = "control-label col-md-2" })
            </h4>
            <div class="col-md-10">
                @Html.EditorFor(model => model.CompLogo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CompLogo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input class="btn btn-default revs" type="submit" value="Create" />
            </div>

        </div>
</div>
    }
<hr/>
        <div>
            <button class="btn btn-default revs">@Html.ActionLink("Back to List", "Index")</button>
        </div>
    <hr/>
    


