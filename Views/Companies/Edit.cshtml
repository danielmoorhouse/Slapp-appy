@model SlappMain.Models.Companies

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<div class="container" style="background-color: black; width: 30%; border: 3px solid white;">


    @using (Html.BeginForm("Edit", "Companies", null, FormMethod.Post,
                            new { enctype = "multipart/form-data"}))
    {
        @Html.AntiForgeryToken()




        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <p class="indhead"> @Html.LabelFor(model => model.CompName, htmlAttributes: new { @class = "control-label col-md-2" })</p>

        @Html.EditorFor(model => model.CompName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.CompName, "", new { @class = "text-danger" })


        <p class="indhead">
            @Html.LabelFor(model => model.CompCont, htmlAttributes: new { @class = "control-label col-md-2" })
        </p>

        @Html.EditorFor(model => model.CompCont, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.CompCont, "", new { @class = "text-danger" })

        <p class="indhead" style="margin-top: 10%">

            @Html.Label("Company Logo", new { @class = "control-label col-md-2" })
        </p>


        <input type="file" name="upload5" style="color: red; margin-top:10%;" />


        <input type="submit" value="Save" class="btn btn-default revs" style="margin-top: 15%;
          margin-bottom: 10%;  " />




        <div class="">
            <p class="indhead">@Html.ActionLink("Back to List", "Index")</p>
        </div>

    }
</div>

 