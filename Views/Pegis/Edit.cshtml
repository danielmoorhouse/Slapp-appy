@model SlappMain.Models.Pegi

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Pegi Record</h2>
<hr/>

@using (Html.BeginForm("Edit", "Pegi", null, FormMethod.Post,
        new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal"  style="margin-left: 20%; height: 20em; margin-top: 5%;">
 
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <h4 class="indhead">
            @Html.LabelFor(model => model.PegRate, htmlAttributes: new { @class = "control-label col-md-2" })
            </h4>
            <div class="col-md-10">
                @Html.EditorFor(model => model.PegRate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PegRate, "", new { @class = "text-danger" })
            </div>
</div>
    <div class="form-group">
        <h4 class="indhead">
            @Html.LabelFor(model => model.PegDesc, htmlAttributes: new { @class = "control-label col-md-2" })
            </h4>
            <div class="col-md-10">
                @Html.EditorFor(model => model.PegDesc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PegDesc, "", new { @class = "text-danger" })
            </div>
    </div>
    <div class="form-group">
        <h4 class="indhead">
            @Html.Label("PegImg", new { @class = "control-label col-md-2" })</h4>
            <div class="col-md-10">
                <input type="file" style="color: #ff0101;" name="upload" id="PegImg" />
            </div>
</div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default revs" />
        </div>
    </div>
</div>
}
<hr/>
<div>
    <button class="btn btn-default revs">   @Html.ActionLink("Back to List", "Index")</button>
</div>
<hr/>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
